---
// Content Homepage Component
const theme = Astro.props.theme;
import ContactForm from '../form/contact.astro'
---

<section data-theme={theme} class={theme === 'bamboosky-creme' ? 'bamboosky-border' : ''}>
  <div class="py-16">
    <div class="container mx-auto px-4 py-8">
      <!-- Details and Social Media Section -->
      <div class="grid grid-cols-1 gap-8 lg:grid-cols-2 lg:gap-12 mb-8">
        <!-- Details -->
        <div>
          <h6 class="text-lg font-bold uppercase text-base-content mb-4">Details</h6>
          <table class="table">
            <tbody>
              <tr>
                <td>Address</td>
                <td class="text-right"><a href="https://maps.google.com/?q=29+High+St,+Bourn,+Cambridge+CB23+2SQ" target="_blank" rel="noopener noreferrer" class="link link-hover">29 High St, Bourn, Cambridge CB23 2SQ</a></td>
              </tr>
              <tr>
                <td>Telephone</td>
                <td class="text-right"><a href="tel:+441954719775" class="link link-hover">01954 719775</a></td>
              </tr>
              <tr>
                <td>Email</td>
                <td class="text-right"><a href="mailto:hello@bamboosky.co.uk" class="link link-hover">hello@bamboosky.co.uk</a></td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Social Media Links -->
        <div>
          <h6 class="text-lg font-bold uppercase text-base-content mb-4">Follow Us</h6>
          <table class="table">
            <tbody>
              <tr>
                <td>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.746-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24.009 12.017 24.009c6.624 0 11.99-5.367 11.99-11.988C24.007 5.367 18.641.001 12.017.001z"/>
                  </svg>
                  Instagram
                </td>
                <td class="text-right">
                  <a href="https://www.instagram.com/bamboo_sky/" target="_blank" rel="noopener noreferrer" class="link link-hover">@bamboo_sky</a>
                </td>
              </tr>
              <tr>
                <td>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                  Facebook
                </td>
                <td class="text-right">
                  <a href="https://www.facebook.com/bambooskythai/" target="_blank" rel="noopener noreferrer" class="link link-hover">@bambooskythai</a>
                </td>
              </tr>
              <tr>
                <td>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                  </svg>
                  TikTok
                </td>
                <td class="text-right">
                  <a href="https://www.tiktok.com/@bamboo.sky.thai" target="_blank" rel="noopener noreferrer" class="link link-hover">@bamboo.sky.thai</a>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Opening Hours and Map Section -->
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2 md:items-start md:gap-8 mb-16">
        <!-- Opening Hours -->
        <div>
          <h6 id="opening-hours" class="text-lg font-bold uppercase text-base-content mb-4">Opening Hours</h6>
          <table class="table">
            <thead>
              <tr>
                <th>Day</th>
                <th class="text-right">Opening Hours</th>
                <th class="text-right">Kitchen Hours</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Monday</td>
                <td class="text-right">Closed</td>
                <td class="text-right">Closed</td>
              </tr>
              <tr>
                <td>Tuesday</td>
                <td class="text-right">4pm - 10pm</td>
                <td class="text-right">5pm - 9pm</td>
              </tr>
              <tr>
                <td>Wednesday - Thursday</td>
                <td class="text-right">11am - 10pm</td>
                <td class="text-right"> 12pm - 2.30pm<br>5pm - 9pm</td>
              </tr>
              <tr>
                <td>Friday</td>
                <td class="text-right">11am - 11pm</td>
                <td class="text-right"> 12pm - 2.30pm<br>5pm - 10pm</td>
              </tr>
              <tr>
                <td>Saturday</td>
                <td class="text-right">11am - 11pm</td>
                <td class="text-right"> 12pm - 4pm<br>5pm - 10pm</td>
              </tr>
              <tr>
                <td>Sunday</td>
                <td class="text-right">12pm - 10pm</td>
                <td class="text-right"> 12pm - 4pm<br>5pm - 10pm</td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Map Section -->
        <div>
          <h6 class="text-lg font-bold uppercase text-base-content mb-4">Find Us</h6>
          <div class="w-full h-80 bg-base-200 rounded-lg overflow-hidden">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2445.9110481417547!2d-0.065096823338832!3d52.19048957197663!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4877d7628f989b3d%3A0xe9e9f9245e0a8384!2s29%20High%20St%2C%20Bourn%2C%20Cambridge%20CB23%202SQ!5e0!3m2!1sen!2suk!4v1759584284356!5m2!1sen!2suk"
              width="100%" 
              height="100%" 
              style="border:0;" 
              allowfullscreen="" 
              loading="lazy" 
              referrerpolicy="no-referrer-when-downgrade"
              title="BambooSky Thai Restaurant Location">
            </iframe>
          </div>
          <div class="mt-4">
            <a 
              href="https://maps.google.com/?q=29+High+St,+Bourn,+Cambridge+CB23+2SQ" 
              target="_blank" 
              rel="noopener noreferrer" 
              class="btn btn-primary w-full">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              Get Directions
            </a>
          </div>
        </div>
      </div>

      <!-- Contact Form Section -->
      <div id="contact-form">
        <ContactForm theme="bamboosky-blue"/>
      </div>
    </div>
  </div>
</section>