---
// Content Homepage Component
const theme = Astro.props.theme;

import welcomeImage1 from '../../assets/images/bamboosky-thai-restuarant-cambridge_108_pmarojax.jpg';
import welcomeImage2 from '../../assets/images/bamboosky-thai-restuarant-cambridge_40_nd5ansyn.jpg';
---

<section data-theme={theme} class={theme === 'bamboosky-creme' ? 'bamboosky-border' : ''}>
  <div class="py-16">
    <div class="container mx-auto px-4 py-8">
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2 md:items-center md:gap-8">
        <div>
          <div class="max-w-prose md:max-w-none">
            <h2 class="text-3xl font-bold uppercase">
              Your Dream Wedding
            </h2>

            <p class="text-lg mt-4">
              Whether you're dreaming of a relaxed countryside gathering, a romantic garden ceremony, or a lively celebration beneath the stars, our expert and experienced team will be on hand to guide, advise, and bring your vision to life.
            </p>
            <p class="text-lg mt-4">
              We offer a range of options to suit different budgets, always with the flexibility to design your wedding your day, your way.
            </p>
            <a href="/contact#contact-form" class="btn btn-primary uppercase mt-8">Contact us about your wedding</a>
          </div>
        </div>

        <div class="hover-gallery rounded-box aspect-square overflow-hidden">
          <img
            src={welcomeImage1.src}
            class="object-cover"
            alt=""
          />
          <img
            src={welcomeImage2.src}
            class="object-cover"
            alt=""
          />
      </div>
    </div>
  </div>
</section>