---
// Navbar Component
---

<!-- Drawer Structure -->
<div class="drawer drawer-end bg-base-100">
  <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content">
    <!-- Sticky Navbar -->
    <div class="sticky top-0 z-50 w-full" data-theme="bamboosky-blue">
      <div class="navbar bg-base-100 container mx-auto">
        <div class="flex-1 uppercase text-xl font-bold"><a href="/">Bamboo Sky</a></div>
        <div class="hidden flex-none lg:block">
          <ul class="menu menu-horizontal uppercase gap-1">
            <!-- Navbar menu content here -->
            <li><a href="/menu" class="btn btn-ghost">Menu</a></li>
            <li><a href="/food" class="btn btn-ghost">Food</a></li>
            <li><a href="/drinks" class="btn btn-ghost">Drink</a></li>
            <li><a href="/venue" class="btn btn-ghost">Venue</a></li>
            <li><a href="/events" class="btn btn-ghost">Events</a></li>
            <li><a href="/christmas" class="btn btn-ghost">Christmas</a></li>
            <li><a href="/contact" class="btn btn-ghost">Contact</a></li>
            <li><a href="https://order.bamboosky.co.uk" target="_blank" class="btn btn-primary">Order Takeout</a></li>
          </ul>
        </div>
        <div class="flex-none lg:hidden">
          <label for="my-drawer-3" aria-label="open sidebar" class="btn btn-square btn-ghost">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              class="inline-block h-6 w-6 stroke-current"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"
              ></path>
            </svg>
          </label>
        </div>
      </div>
    </div>
    
    <!-- Page content slot goes here -->
    <slot />
  </div>

  <div class="drawer-side z-40">
    <label for="my-drawer-3" aria-label="close sidebar" class="drawer-overlay"></label>
    <ul class="menu bg-base-200 min-h-full w-80 p-4 uppercase gap-2 mt-16">
      <!-- Sidebar content here -->
      <li><a href="/menu">Menu</a></li>
      <li><a href="/food">Food</a></li>
      <li><a href="/drinks">Drink</a></li>
      <li><a href="/venue">Venue</a></li>
      <li><a href="/events">Events</a></li>
      <li><a href="/christmas">Christmas</a></li>
      <li><a href="/contact">Contact</a></li>
      <li><a href="https://order.bamboosky.co.uk" target="_blank" class="btn btn-primary">Order Takeout</a></li>
    </ul>
  </div>
</div>

<style>
  .navbar-container {
    transition: 
      --color-base-100 300ms ease,
      --color-primary 300ms ease,
      --color-accent 300ms ease;
  }
  
  /* Ensure sticky positioning works properly on all devices */
  .sticky.top-0.z-50.w-full {
    position: -webkit-sticky;
    position: sticky;
    top: 0;
    will-change: transform;
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
  }
  
  /* Prevent any layout shifts */
  .navbar {
    box-sizing: border-box;
    transform: translateZ(0);
    -webkit-transform: translateZ(0);
  }
</style>

<script>
  // Add scroll event listener to change navbar theme
  window.addEventListener('scroll', () => {
    const navbarContainer = document.querySelector('.sticky.top-0.z-50.w-full');
    
    if (navbarContainer) {
      if (window.scrollY > 50) {
        navbarContainer.setAttribute('data-theme', 'bamboosky-creme');
      } else {
        navbarContainer.setAttribute('data-theme', 'bamboosky-blue');
      }
    }
  });
</script>