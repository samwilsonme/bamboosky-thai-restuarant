---
// Showcase Homepage Component
const theme = Astro.props.theme;

import Heading from '../heading/heading.astro';

import showcaseImage1 from '../../assets/images/bamboosky-thai-restuarant-cambridge_2_ymnvqz65.jpg';
import showcaseImage2 from '../../assets/images/bamboosky-thai-restuarant-cambridge_26_b7sddu8i.jpg';
import showcaseImage3 from '../../assets/images/bamboosky-thai-restuarant-cambridge_36_9ibs2olx.jpg';
---

<section data-theme={theme} class={theme === 'bamboosky-creme' ? 'bamboosky-border' : ''}>
  
  <Heading 
    title="Experience Bamboo Sky" 
    description="From bright skies to starlit evenings, this is the place for exquisite Thai food, botanical brews, uplifting vibes, & stolen moments away from it all."
    variant="centered"
  />

  <div class="container mx-auto px-4 py-8 pb-16">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      
      <!-- Left Column - Two Small Sections -->
      <div class="lg:col-span-1 flex flex-col justify-between gap-8 lg:h-full">
        
        <!-- Small Section 1 -->
        <div class="flex flex-col sm:flex-row lg:flex-1 items-center">
          <div class="sm:w-1/2">
            <img
              src={showcaseImage1.src}
              class="rounded-box w-full aspect-square object-cover"
              alt=""
            />
          </div>
          <div class="sm:w-1/2 p-6 flex flex-col justify-center">
            <h3 class="text-2xl font-semibold mb-2 uppercase">By Day,</h3>
            <p class="">Bamboo Sky is a calm, welcoming space to work, wander, and gather with friends.</p>
          </div>
        </div>

        <!-- Small Section 2 -->
        <div class="flex flex-col sm:flex-row lg:flex-1 items-center">
          <div class="sm:w-1/2">
            <img
              src={showcaseImage2.src}
              class="rounded-box w-full aspect-square object-cover"
              alt=""
            />
          </div>
          <div class="sm:w-1/2 p-6 flex flex-col justify-center">
            <h3 class="text-2xl font-semibold mb-2 uppercase">By Night,</h3>
            <p class="">Bamboo Sky transforms into a magical setting for <a href="/domes" class="link link-hover">date nights</a>, <a href="/food" class="link link-hover">feasts</a>, and <a href="/events" class="link link-hover">celebrations</a>.</p>
          </div>
        </div>
        
      </div>

      <!-- Right Column - Large Section -->
      <div class="lg:col-span-1 lg:h-full max-w-150 max-h-180">
        <div class="bg-base-100 overflow-hidden h-full section-bamboosky-border" data-theme="bamboosky-creme">
          <div class="flex flex-col h-full">
            <!-- Image on top -->
            <div class="px-8 pt-8">
              <img
                src={showcaseImage3.src}
                class="rounded-box w-full h-64 object-cover"
                alt=""
              />
            </div>
            
            <!-- Text and button below -->
            <div class="px-8 pb-8 flex-1 flex flex-col justify-center text-center">
              <h2 class="text-3xl font-bold mb-4 uppercase">Welcome to our Home</h2>
              <p class="text-lg mb-6 leading-relaxed">
                Come for an hour, stay for the day, or let Bamboo Sky be the backdrop to your happily ever after.
              </p>
              
              <!-- Button -->
              <a href="/weddings" class="btn btn-primary font-semibold uppercase">
                Find out about Weddings
              </a>
            </div>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</section>
