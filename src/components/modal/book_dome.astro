// Book Dome Modal Component
---

<button class="btn btn-lg btn-primary uppercase" onclick="book_dome_modal.showModal()">Book Dome</button>

<dialog id="book_dome_modal" class="modal">
  <div class="modal-box relative">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2 font-bold text-xl uppercase">x</button>
    </form>

    <h3 class="text-lg font-bold mb-4 uppercase">Book a Dome</h3>

    <!-- Widget container -->
    <div id="book-dome-widget" style="width: 80vw; height: 80vh; max-width: 100%;">
      <iframe 
        src="https://app.tablein.com/widget?restaurant_id=4265001" 
        width="100%" 
        height="100%" 
        frameborder="0" 
        scrolling="yes"
        style="border: none; border-radius: 8px;">
      </iframe>
    </div>

  </div>
</dialog>
