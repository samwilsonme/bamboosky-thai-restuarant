// Footer Component
---

<footer data-theme="bamboosky-creme" class="text-base-content p-10 bamboosky-border-footer">
  <div class="container mx-auto px-4 py-16">
    <div class="flex flex-col lg:flex-row gap-8">
      
      <!-- Restaurant Info -->
      <aside class="flex flex-col flex-1">
        <svg
          width="50"
          height="50"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
          fill-rule="evenodd"
          clip-rule="evenodd"
          class="fill-current mb-4">
          <path
            d="M22.672 15.226l-2.432.811.841 2.515c.33 1.019-.209 2.127-1.23 2.456-1.15.325-2.148-.321-2.463-1.226l-.84-2.518-5.013 1.677.84 2.517c.391 1.203-.434 2.542-1.831 2.542-.88 0-1.601-.564-1.86-1.314l-.842-2.516-2.431.809c-1.135.328-2.145-.317-2.463-1.229-.329-1.018.211-2.127 1.231-2.456l2.432-.809-1.621-4.823-2.432.808c-1.355.384-2.558-.59-2.558-1.839 0-.817.509-1.582 1.327-1.846l2.433-.809-.842-2.515c-.33-1.02.211-2.129 1.232-2.458 1.02-.329 2.13.209 2.461 1.229l.842 2.515 5.011-1.677-.839-2.517c-.403-1.238.484-2.553 1.843-2.553.819 0 1.585.509 1.85 1.326l.841 2.517 2.431-.81c1.02-.33 2.131.211 2.461 1.229.332 1.018-.21 2.126-1.23 2.456l-2.433.809 1.622 4.823 2.433-.809c1.242-.401 2.557.484 2.557 1.838 0 .819-.51 1.583-1.328 1.847m-8.992-6.428l-5.01 1.675 1.619 4.828 5.011-1.674-1.62-4.829z"></path>
        </svg>
        <h6 class="text-lg font-bold uppercase text-base-content">Bamboo Sky Thai</h6>
        <p>
          Authentic Thai cuisine in the heart of the city.
          <br />
          Experience the flavors of Thailand since 2015.
        </p>
      </aside>

      <div class="flex flex-row gap-8 flex-1">
        <!-- Information -->
        <nav class="flex flex-col flex-1 gap-2">
          <h6 class="text-lg font-bold uppercase text-base-content">Information</h6>
          <a class="link link-hover">Venue</a>
          <a class="link link-hover">Events</a>
          <a class="link link-hover">Weddings</a>
          <a class="link link-hover">Allergen Information</a>
          <a class="link link-hover">Privacy Policy</a>
        </nav>

        <!-- Contact -->
        <nav class="flex flex-col flex-1 gap-2">
          <h6 class="text-lg font-bold uppercase text-base-content">Contact</h6>
          <a class="link link-hover">29 High St, Bourn, Cambridge CB23 2SQ</a>
          <a class="link link-hover">01954 719775</a>
          <a class="link link-hover">hello@bamboosky.co.uk</a>
        </nav>
      </div>

      <!-- Hours -->
      <div class="flex flex-col flex-1">
        <h6 class="text-lg font-bold uppercase text-base-content">Hours</h6>
        <table class="table">
          <tbody>
            <tr>
              <th>Monday - Tuesday</th>
              <td class="text-right">Closed</td>
            </tr>
            <tr>
              <th>Wednesday - Thursday</th>
              <td class="text-right">11am - 10pm</td>
            </tr>
            <tr>
              <th>Friday - Saturday</th>
              <td class="text-right">11am - 11pm</td>
            </tr>
            <tr>
              <th>Sunday</th>
              <td class="text-right">12pm - 10pm</td>
            </tr>
            <tr>
              <td>Kitchen Hours</td>
              <td class="text-right">Lunch & Dinner Service</td>
            </tr>
          </tbody>
        </table>
      </div>
 
    </div>

    <div class="divider"></div>

    <div class="flex flex-col lg:flex-row items-center justify-between gap-6">
      <div class="flex flex-col items-center lg:items-start text-center lg:text-left">
        <h3 class="text-2xl font-bold">STAY UPDATED</h3>
        <p class="text-lg">Subscribe for exclusive updates and special offers.</p>
      </div>
      
      <div class="join">
        <div>
          <label class="input validator join-item w-80">
            <svg class="h-[1em] opacity-50" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <g
                stroke-linejoin="round"
                stroke-linecap="round"
                stroke-width="2.5"
                fill="none"
                stroke="currentColor"
              >
                <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
              </g>
            </svg>
            <input type="email" placeholder="mail@site.com" required />
          </label>
          <div class="validator-hint hidden">Enter valid email address</div>
        </div>
        <button class="btn btn-neutral join-item">Subscribe</button>
      </div>
    </div>

    <div class="divider"></div>

    <aside>
      <p>Copyright Â© {new Date().getFullYear()} - All right reserved by ACME Industries Ltd</p>
    </aside>

  </div>
</footer>