---
// Cards Food Component
const theme = Astro.props.theme;
import Heading from '../heading/heading.astro';

import image1 from '../../assets/images/bamboosky-thai-restuarant-cambridge_82_5mczpe3b.jpg';
import image2 from '../../assets/images/bamboosky-thai-restuarant-cambridge_1_c9gcypdh.jpg';
import image3 from '../../assets/images/bamboosky-thai-restuarant-cambridge_73_63lcyt8k.jpg';

const cards = [
  {
    name: "Crispy Duck & Pancakes",
    description: "Served With Soft Pancakes, Cucumber, Spring Onions, Hoisin Sauce",
    image: image1.src
  },
  {
    name: "Weeping Tiger",
    description: "Sizzling Rump Steak 7oz, Onion, Green & Red Pepper, Thai Spicy Sauce",
    image: image2.src
  },
  {
    name: "Thai Honey Red Pork",
    description: "Thai Style Shar-siu, Bbq Sauce, Sesame Seeds, Vegatables",
    image: image3.src
  }
];
---

<section data-theme={theme} class={theme === 'bamboosky-creme' ? 'bamboosky-border' : ''}>

  <Heading 
    title="Signature Dishes"
    description="Discover some of our most celebrated creations, each crafted with traditional techniques and premium ingredients."
    variant="centered"
  />

  <div class="container mx-auto px-4 py-8 pb-16">
    <div class="flex flex-col gap-16 pb-8 md:flex-row">
      {cards.map((card, index) => (
        <div class="card">
          <figure class="rounded-box aspect-square overflow-hidden">
            <img
              src={card.image}
              alt={card.name}
              class="object-cover w-full h-full"
            />
          </figure>
          <div class="card-body">
            <h2 class="card-title">{card.name}</h2>
            <p>{card.description}</p>
          </div>
        </div>
      ))}
    </div>

    <a href="/menu" class="btn btn-primary uppercase w-full">View complete Menu</a>

  </div>
</section>

<style>
  .card {
    flex: 1;
    min-width: 0;
  }
  
  .card figure {
    width: 100%;
    height: 300px;
    min-height: 300px;
    max-height: 300px;
  }
  
  .card figure img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
</style>