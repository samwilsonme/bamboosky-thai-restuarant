---
// Cards Food Component
const theme = Astro.props.theme;
import Heading from '../heading/heading.astro';

import image1 from '../../assets/images/bamboosky-thai-restuarant-cambridge_94_znitlp9e.jpg';
import image2 from '../../assets/images/bamboosky-thai-restuarant-cambridge_1_9qh7oe3y.jpg';
import image3 from '../../assets/images/bamboosky-thai-restuarant-cambridge_67_52ycgcke.jpg';

const cards = [
  {
    name: "Creative Workshops",
    description: "Find your flow with Paint & Sip nights, Doodles & Noodles sessions, and festive wreath making. Perfect for groups or solo guests â€“ no experience needed.",
    image: image1.src
  },
  {
    name: "Live Entertainment",
    description: "Our teepee becomes an intimate stage for unforgettable evenings with table magic nights and acoustic sessions featuring local talent.",
    image: image2.src
  },
  {
    name: "Seasonal Gatherings",
    description: "Celebrate the seasons with festive afternoon tea parties, mulled wine evenings, and our legendary full moon parties under the stars.",
    image: image3.src
  }
];
---

<section data-theme={theme} class={theme === 'bamboosky-creme' ? 'bamboosky-border' : ''}>

  <Heading 
    title="All year round Events"
    description="From creative workshops to live entertainment, discover our curated calendar of unique experiences."
    variant="centered"
  />

  <div class="container mx-auto px-4 py-8 pb-16">
    <div class="flex flex-col gap-16 pb-8 md:flex-row">
      {cards.map((card, index) => (
        <div class="card">
          <figure class="rounded-box aspect-square overflow-hidden">
            <img
              src={card.image}
              alt={card.name}
              class="object-cover w-full h-full"
            />
          </figure>
          <div class="card-body">
            <h2 class="card-title uppercase">{card.name}</h2>
            <p>{card.description}</p>
          </div>
        </div>
      ))}
    </div>

    <a href="https://www.designmynight.com/cambridge/restaurants/bamboo-sky/" target="_blank" class="btn btn-primary uppercase w-full">View upcoming events</a>

  </div>
</section>

<style>
  .card {
    flex: 1;
    min-width: 0;
  }
  
  .card figure {
    width: 100%;
    height: 300px;
    min-height: 300px;
    max-height: 300px;
  }
  
  .card figure img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
</style>