---
// Cards Food Component
const theme = Astro.props.theme;
import Heading from '../heading/heading.astro';

import image1 from '../../assets/images/bamboosky-thai-restuarant-cambridge_46_z8ve84tb.jpg';
import image2 from '../../assets/images/bamboosky-thai-restuarant-cambridge_65_7amashsu.jpg';
import image3 from '../../assets/images/bamboosky-thai-restuarant-cambridge_71_twbaoimo.jpg';

const cards = [
  {
    name: "The Iconic Willow Tree",
    description: "Lit by fairy lights as dusk falls, with romantic double tree swing for all ages",
    image: image1.src
  },
  {
    name: "Magical Dining Domes",
    description: "Our private domes offer the perfect escape for any occasion.",
    image: image2.src
  },
  {
    name: "Sun-Drenched Terrace",
    description: "Family-friendly sun deck, shaded tables, and garden deck chairs",
    image: image3.src
  }
];
---

<section data-theme={theme} class={theme === 'bamboosky-creme' ? 'bamboosky-border' : ''}>

  <Heading 
    title="Featured in The Sunday Times"
    description="As one of the UK's beautiful pub gardens, discover the magical spaces that make our garden truly special."
    variant="centered"
  />

  <div class="container mx-auto px-4 py-8 pb-16">
    <div class="flex flex-col gap-16 pb-8 md:flex-row">
      {cards.map((card, index) => (
        <div class="card">
          <figure class="rounded-box aspect-square overflow-hidden">
            <img
              src={card.image}
              alt={card.name}
              class="object-cover w-full h-full"
            />
          </figure>
          <div class="card-body">
            <h2 class="card-title uppercase">{card.name}</h2>
            <p>{card.description}</p>
          </div>
        </div>
      ))}
    </div>

    <a href="#top" class="btn btn-primary uppercase w-full">Book Garden Dining</a>

  </div>
</section>

<style>
  .card {
    flex: 1;
    min-width: 0;
  }
  
  .card figure {
    width: 100%;
    height: 300px;
    min-height: 300px;
    max-height: 300px;
  }
  
  .card figure img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
</style>