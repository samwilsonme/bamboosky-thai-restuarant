---
// Cards Food Component
const theme = Astro.props.theme;
import Heading from '../heading/heading.astro';

import image1 from '../../assets/images/bamboosky-thai-restuarant-cambridge_36_9ibs2olx.jpg';
import image2 from '../../assets/images/bamboosky-thai-restuarant-cambridge_13_hmiwmuow.jpg';
import image3 from '../../assets/images/bamboosky-thai-restuarant-cambridge_95_oesh6yiu.jpg';

const cards = [
  {
    name: "Capacity: Up to 80 guests",
    description: "Spacious enough for weddings, milestone birthdays, and corporate events of all sizes.",
    image: image1.src
  },
  {
    name: "Fairy lights, firepit, and meadow setting",
    description: "Magical ambiance as the sun sets, with a warm central firepit and twinkling lights.",
    image: image2.src
  },
  {
    name: "Weddings, celebrations, and unique gatherings",
    description: "Perfect for seasonal celebrations, wakes, private parties, and one-of-a-kind events.",
    image: image3.src
  }
];
---

<section data-theme={theme} class={theme === 'bamboosky-creme' ? 'bamboosky-border' : ''}>

  <Heading 
    title="Perfect for Any Celebration"
    description="From intimate gatherings to grand celebrations, the Tipi offers a unique setting for life's most important moments."
    variant="centered"
  />

  <div class="container mx-auto px-4 py-8 pb-16">
    <div class="flex flex-col gap-16 pb-8 md:flex-row">
      {cards.map((card, index) => (
        <div class="card">
          <figure class="rounded-box aspect-square overflow-hidden">
            <img
              src={card.image}
              alt={card.name}
              class="object-cover w-full h-full"
            />
          </figure>
          <div class="card-body">
            <h2 class="card-title uppercase">{card.name}</h2>
            <p>{card.description}</p>
          </div>
        </div>
      ))}
    </div>

    <a href="/contact#contact-form" class="btn btn-primary uppercase w-full">Contact us about the Tipi</a>

  </div>
</section>

<style>
  .card {
    flex: 1;
    min-width: 0;
  }
  
  .card figure {
    width: 100%;
    height: 300px;
    min-height: 300px;
    max-height: 300px;
  }
  
  .card figure img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
</style>