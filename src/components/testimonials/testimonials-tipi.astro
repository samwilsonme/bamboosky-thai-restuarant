---
// Testimonials data
const theme = Astro.props.theme;
import Heading from '../heading/heading.astro';

import image1 from '../../assets/images/bamboosky-thai-restuarant-cambridge_7_j30evnow.jpg';
import image2 from '../../assets/images/bamboosky-thai-restuarant-cambridge_115_mg3iuwab.jpg';
import image3 from '../../assets/images/bamboosky-thai-restuarant-cambridge_107_bseg6y2l.jpg';

const testimonials = [
  {
    name: "Kaylea & Steven",
    quote: "Such beautiful memories, I couldn't have wished for more.",
    image: image1.src
  },
  {
    name: "Cathay & Stephen",
    quote: "We had the best day of our lives, and you and the Willow team made it perfect :)",
    image: image2.src
  },
  {
    name: "Daniel Pembrey",
    quote: "I just wanted to say thank you for your help organising this event for us! Everyone was so happy with every aspect of the dinner and evening. All the staff were great too!",
    image: image3.src
  }
];
---

<section data-theme={theme} class={theme === 'bamboosky-creme' ? 'bamboosky-border' : ''}>

  <Heading 
    title="Testimonials"
    variant="centered"
  />

  <div class="container mx-auto px-4 py-8 pb-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <!-- Left Column -->
      <div class="card">
        <div class="card-body">
          <div class="w-full aspect-square mb-4 rounded-box overflow-hidden">
            <img src={testimonials[0].image} alt={testimonials[0].name} class="w-full h-full object-cover" />
          </div>
          <div class="text-center">
            <div class="flex justify-center mb-2 text-bamboosky-gold">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M6 17h3l2-4V7H5v6h3zm8 0h3l2-4V7h-6v6h3z"/>
              </svg>
            </div>
            <h3 class="card-title text-lg justify-center mb-2">{testimonials[0].name}</h3>
            <p class="mb-4">{testimonials[0].quote}</p>
            <div class="rating rating-md justify-center gap-1">
              <input type="radio" name="rating-1" class="mask mask-star-2" checked />
              <input type="radio" name="rating-1" class="mask mask-star-2" checked />
              <input type="radio" name="rating-1" class="mask mask-star-2" checked />
              <input type="radio" name="rating-1" class="mask mask-star-2" checked />
              <input type="radio" name="rating-1" class="mask mask-star-2" checked />
            </div>
          </div>
        </div>
      </div>

      <!-- Middle Column -->
      <div class="card">
        <div class="card-body">
          <!-- Image first on mobile, text first on desktop -->
          <div class="w-full aspect-square mb-4 md:mb-0 md:order-2 rounded-box overflow-hidden">
            <img src={testimonials[1].image} alt={testimonials[1].name} class="w-full h-full object-cover" />
          </div>
          <div class="text-center md:order-1 md:mb-8">
            <div class="flex justify-center mb-2 text-bamboosky-gold">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M6 17h3l2-4V7H5v6h3zm8 0h3l2-4V7h-6v6h3z"/>
              </svg>
            </div>
            <h3 class="card-title text-lg justify-center mb-2">{testimonials[1].name}</h3>
            <p class="mb-4">{testimonials[1].quote}</p>
            <div class="rating rating-md justify-center gap-1">
              <input type="radio" name="rating-2" class="mask mask-star-2" checked />
              <input type="radio" name="rating-2" class="mask mask-star-2" checked />
              <input type="radio" name="rating-2" class="mask mask-star-2" checked />
              <input type="radio" name="rating-2" class="mask mask-star-2" checked />
              <input type="radio" name="rating-2" class="mask mask-star-2" checked />
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column -->
      <div class="card">
        <div class="card-body">
          <div class="w-full aspect-square mb-4 rounded-box overflow-hidden">
            <img src={testimonials[2].image} alt={testimonials[2].name} class="w-full h-full object-cover" />
          </div>
          <div class="text-center">
            <div class="flex justify-center mb-2 text-bamboosky-gold">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M6 17h3l2-4V7H5v6h3zm8 0h3l2-4V7h-6v6h3z"/>
              </svg>
            </div>
            <h3 class="card-title text-lg justify-center mb-2">{testimonials[2].name}</h3>
            <p class="mb-4">{testimonials[2].quote}</p>
            <div class="rating rating-md justify-center gap-1">
              <input type="radio" name="rating-3" class="mask mask-star-2" checked />
              <input type="radio" name="rating-3" class="mask mask-star-2" checked />
              <input type="radio" name="rating-3" class="mask mask-star-2" checked />
              <input type="radio" name="rating-3" class="mask mask-star-2" checked />
              <input type="radio" name="rating-3" class="mask mask-star-2" checked />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>