---
// Thank You Page
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/navbar/navbar.astro';
import Hero from '../components/hero/hero-thankyou.astro';
import Footer from '../components/footer/footer.astro'
import FloatingSocial from '../components/floating/social.astro'
import Dock from '../components/dock/dock.astro'

// SEO Metadata for Thank You Page
const pageTitle = "Thank You | BambooSky Thai Restaurant";
const pageDescription = "Thank you for contacting BambooSky Thai Restaurant. We'll be in touch soon to help with your inquiry, booking, or reservation.";
const pageImage = "/bamboosky-thai-restuarant-cambridge_5_cc6brvx8.jpg";
const pageKeywords = "thank you, contact confirmation, booking confirmation, BambooSky thank you";

// Set robots to noindex for thank you page
const robots = "noindex, nofollow";
---

<Layout 
	title={pageTitle}
	description={pageDescription}
	image={pageImage}
	keywords={pageKeywords}
	robots={robots}
>
	<Navbar>
		<Hero />
		<Footer />
		<FloatingSocial />
		<Dock />
	</Navbar>
</Layout>